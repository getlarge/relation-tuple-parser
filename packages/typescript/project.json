{
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"name": "typescript",
	"sourceRoot": "packages/typescript/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nrwl/rollup:rollup",
			"outputs": [
				"{options.outputPath}"
			],
			"options": {
				"outputPath": "dist/packages/typescript",
				"main": "packages/typescript/src/index.ts",
				"tsConfig": "packages/typescript/tsconfig.lib.json",
				"assets": []
			}
		},
		"publish": {
			"executor": "nx:run-commands",
			"options": {
				"command": "node tools/scripts/publish.mjs relation-tuple-parser {args.ver} {args.tag}"
			},
			"dependsOn": [
				"build"
			]
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": [
				"{options.outputFile}"
			],
			"options": {
				"lintFilePatterns": [
					"packages/typescript/**/*.ts"
				]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": [
				"{workspaceRoot}/coverage/{projectRoot}"
			],
			"options": {
				"jestConfig": "packages/typescript/jest.config.ts",
				"passWithNoTests": true
			}
		}
	},
	"tags": []
}
